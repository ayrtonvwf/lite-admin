extends layout.pug

block content
    .row
        .col-xs-12
            h1.content-title
                i.fa.fa-users Página inicial
    .row
        .col-md-6
            .box
                .box-header Formulário
                .box-body
                    form
                        .row
                            .col-xs-6.input
                                input#input(placeholder='Teste de campo' required)
                                label(for='input') Teste de campo
                            .col-xs-6.input
                                select#select(required)
                                    option(selected hidden disabled) Selecione...
                                    option Teste 1
                                    option Teste 2
                                    option Teste 3
                                label(for='select') Teste de combo
                        .row
                            .col-xs-6.input
                                input#date(type='date' placeholder='Data' required)
                                label(for='date') Data
                            .col-xs-6.input
                                input#number(type='number' placeholder='Número' required)
                                label(for='number') Teste de número
                        .row
                            .col-xs-12.input
                                textarea#textarea(placeholder='Teste de textarea' required)
                                label(for='textarea') Teste de Textarea
                        .row
                            .col-xs-6
                                .row
                                    .col-xs-12
                                        label
                                            input(type='checkbox')
                                            | Opção 1
                                .row
                                    .col-xs-12
                                        label
                                            input(type='checkbox')
                                            | Opção 2
                                .row
                                    .col-xs-12
                                        label
                                            input(type='checkbox')
                                            | Opção 3
                            .col-xs-6
                                .row
                                    .col-xs-12
                                        label
                                            input(type='radio' name='radio')
                                            | Opção 1
                                .row
                                    .col-xs-12
                                        label
                                            input(type='radio' name='radio')
                                            | Opção 2
                                .row
                                    .col-xs-12
                                        label
                                            input(type='radio' name='radio')
                                            | Opção 3
                        .row
                            .col-xs-12.form-status
            .box
                .box-header Tabela
                .box-body
                    .row
                        .col-sm-12
                            table.table
                                thead
                                    tr
                                        th Nome
                                        th Telefone
                                        th &nbsp;
                                tbody
                                    tr
                                        td John Doe
                                        td (12) 1234-1234
                                        td.text-right
                                            a.btn.btn-small.btn-red.tooltip(href='#' title='Excluir')
                                                i.fa.fa-fw.fa-trash
                                    tr
                                        td Grace Jhonson
                                        td (12) 3456-7890
                                        td.text-right
                                            a.btn.btn-small.btn-red.tooltip(href='#' title='Excluir')
                                                i.fa.fa-fw.fa-trash
                                    tr
                                        td Dam Brice
                                        td (99) 9 9999-9999
                                        td.text-right
                                            a.btn.btn-small.btn-red.tooltip(href='#' title='Excluir')
                                                i.fa.fa-fw.fa-trash
                                tfoot
                                    tr
                                        td(colspan='3') #[b Total:] 3
                    .row
                        .col-xs-12