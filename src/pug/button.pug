        .col-md-12
            .box
                .box-header Buttons
                .box-body
                    fieldset
                        legend Sizes
                        button.btn.btn-xs Extra small
                        button.btn.btn-sm Small
                        button.btn Normal
                        button.btn.btn-lg Large
                    fieldset
                        legend Colors
