extends layout.pug

block content
    .row
        .col-12
            h1.content-title
                i.material-icons web_asset
                | Box
    .row
        .col-md-6
            .box
                .box-body
                    br
                    p Boxes are awesome containers to you content.
                    p You can separate your content in many boxes to better organize it.
                    br
        .col-md-6
            .box
                .box-header A nice header
                    .pull-right
                        button.btn-xs.btn-primary
                            i.material-icons person
                            | Profile
                .box-body
                    p Boxes can also have headers and footers.

                .box-footer
                    button.btn-danger.btn-sm Delete
                    button.btn-success.btn-sm.pull-right Save
